{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [0],
    "subject-case": [0],
    "header-max-length": [2, "always", 100]
  },
  "parserPreset": {
    "parserOpts": {
      "headerPattern": /^(\d+)-(\d+): (.+)$/,
      "headerCorrespondence": ["epic", "story", "subject"]
    }
  }
}
